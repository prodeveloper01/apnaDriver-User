<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".food.FiltersFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/applyBtn"
        android:orientation="vertical">

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_135sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/gray_round_view" />

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:layout_below="@+id/view"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp">

            <RelativeLayout
                android:id="@+id/backBtn"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/horizontal_margin_toolbar"
                    app:srcCompat="@drawable/ic_cross" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:text="@string/filters"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/toolbarTextSize" />

            <TextView
                android:id="@+id/clear_filter_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/custom_ripple"
                android:includeFontPadding="false"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@string/clear_all"
                android:textColor="@color/app_color"
                android:textSize="@dimen/_10sdp" />


        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@color/light_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:layout_marginTop="@dimen/_15sdp"
            android:includeFontPadding="false"
            android:text="@string/sort"
            android:textColor="@color/text_color_black" />

        <RelativeLayout
            android:id="@+id/most_popular_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/custom_ripple"
            android:paddingHorizontal="@dimen/horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/airbnbcereallight"
                android:includeFontPadding="false"
                android:text="@string/most_popular"
                android:textColor="@color/text_color_black" />

            <RadioButton
                android:id="@+id/most_popular_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:focusable="false"
                android:theme="@style/checkBoxStyle" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rating_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/custom_ripple"
            android:paddingHorizontal="@dimen/horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/airbnbcereallight"
                android:includeFontPadding="false"
                android:text="@string/rating"
                android:textColor="@color/text_color_black" />

            <RadioButton
                android:id="@+id/rating_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:focusable="false"
                android:theme="@style/checkBoxStyle" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/deliver_time_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/custom_ripple"
            android:paddingHorizontal="@dimen/horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/airbnbcereallight"
                android:includeFontPadding="false"
                android:text="@string/delivery_time"
                android:textColor="@color/text_color_black" />

            <RadioButton
                android:id="@+id/delivery_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:focusable="false"
                android:theme="@style/checkBoxStyle" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@color/light_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:layout_marginTop="@dimen/_15sdp"
            android:includeFontPadding="false"
            android:text="@string/price_range"
            android:textColor="@color/text_color_black" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_price_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/horizontal_margin"
                android:layout_marginTop="@dimen/_5sdp"
                android:includeFontPadding="false"
                android:text="$0"
                android:textColor="@color/dark_gray" />

            <View
                android:id="@+id/view_1"
                android:layout_width="@dimen/_4sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_toEndOf="@+id/tv_price_range"
                android:background="@color/dark_gray" />

            <TextView
                android:id="@+id/tv_final_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toEndOf="@+id/view_1"
                android:includeFontPadding="false"
                android:text="$1000"
                android:textColor="@color/dark_gray" />

        </RelativeLayout>

        <com.appyvet.materialrangebar.RangeBar
            android:id="@+id/range_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            app:mrb_connectingLineColor="@color/gray"
            app:mrb_pinColor="@color/transparent"
            app:mrb_pinTextColor="@color/transparent"
            app:mrb_rangeBar="true"
            app:mrb_rangeBarColor="@color/gray"
            app:mrb_selectorColor="@color/app_color"
            app:mrb_selectorSize="12dp"
            app:mrb_tickHeight="0dp"
            app:mrb_tickStart="0" />

        <RelativeLayout
            android:id="@+id/applyBtn"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:layout_marginHorizontal="@dimen/horizontal_margin"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/app_color_bg_btn">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:text="@string/apply"
                android:textColor="@color/white"
                android:textSize="@dimen/btn_textSize" />

        </RelativeLayout>

    </LinearLayout>


</FrameLayout>