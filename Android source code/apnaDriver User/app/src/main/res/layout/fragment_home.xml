<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:clickable="true"
    android:focusable="true"
    tools:context=".ride.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_42sdp"
                app:contentInsetStart="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_12sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/airbnbcerealbold"
                        android:text="@string/gograb"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/toolbarTextSize" />

                </RelativeLayout>


            </androidx.appcompat.widget.Toolbar>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/findCarLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:background="@drawable/white_round_card"
                    android:elevation="@dimen/_1sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_ripple"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_32sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:srcCompat="@drawable/ic_car" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/airbnbcerealbold"
                            android:text="@string/car"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_Size10" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/bikeLinLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/horizontal_margin"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:background="@drawable/white_round_card"
                    android:elevation="@dimen/_1sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_ripple"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_32sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:srcCompat="@drawable/ic_delivery_bike" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/airbnbcerealbold"
                            android:text="@string/bike"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_Size10" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">


                <LinearLayout
                    android:id="@+id/deliveryLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:background="@drawable/white_round_card"
                    android:elevation="@dimen/_1sdp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_ripple"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_32sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:srcCompat="@drawable/ic_delivery_boy" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/airbnbcerealbold"
                            android:text="@string/delivery"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_Size10" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/foodLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/horizontal_margin"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_weight="1"
                    android:background="@drawable/white_round_card"
                    android:elevation="@dimen/_1sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_ripple"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_5sdp">

                        <ImageView
                            android:layout_width="@dimen/_32sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:srcCompat="@drawable/ic_food" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/airbnbcerealbold"
                            android:text="@string/food"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_Size10" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:background="@drawable/white_round_card"
                android:elevation="@dimen/_3sdp"
                android:orientation="vertical"
                android:paddingStart="@dimen/_6sdp"
                android:paddingEnd="@dimen/_6sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/airbnbcerealbold"
                    android:text="@string/order_food"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_Size10" />


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/orderFoodImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:actualImageScaleType="centerCrop"
                    app:placeholderImage="@drawable/image_preview"
                    app:placeholderImageScaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/airbnbcerealbold"
                    android:text="@string/order_food_with_gograb"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/text_Size12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/use_promo_gograb200_and_get_r_200_off_on_norders_worth_rs_800_or_above"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_Size10" />


                <TextView
                    android:id="@+id/food_order_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_height"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/green_button_bg"
                    android:elevation="0dp"
                    android:gravity="center"
                    android:stateListAnimator="@null"
                    android:text="@string/oder_now"
                    android:textAllCaps="false"
                    android:textColor="@color/both_side_white"
                    android:textSize="@dimen/btn_textSize" />


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@drawable/white_round_card"
                android:elevation="@dimen/_3sdp"
                android:orientation="vertical"
                android:paddingStart="@dimen/_6sdp"
                android:paddingEnd="@dimen/_6sdp">

                <TextView
                    android:id="@+id/book_a_RideText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="@string/book_a_ride"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_Size10" />

                <RelativeLayout
                    android:id="@+id/dropOfLocationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/book_a_RideText"
                    android:layout_marginTop="@dimen/_15sdp">


                    <ImageView
                        android:id="@+id/dropOffLocation"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_location_dropof" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_toEndOf="@+id/dropOffLocation">

                        <TextView
                            android:id="@+id/tvCurrentLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/current_location"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/text_Size11" />

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_alignParentEnd="true"
                            app:srcCompat="@drawable/ic_farward"
                            app:tint="@color/lite_gray" />

                        <View
                            android:id="@+id/separator"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_below="@+id/tvCurrentLocation"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:background="@color/lite_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/separator"
                            android:text="@string/where_do_you_want_to_go"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_Size11" />


                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_below="@+id/separator"
                            android:layout_alignParentEnd="true"
                            app:srcCompat="@drawable/ic_search"
                            app:tint="@color/lite_gray" />


                    </RelativeLayout>


                </RelativeLayout>


                <TextView
                    android:id="@+id/selectDropOfBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_height"
                    android:layout_below="@+id/dropOfLocationLayout"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/green_button_bg"
                    android:elevation="0dp"
                    android:gravity="center"
                    android:stateListAnimator="@null"
                    android:text="@string/select_dropoff"
                    android:textAllCaps="false"
                    android:textColor="@color/both_side_white"
                    android:textSize="@dimen/btn_textSize" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/white_round_card"
                android:elevation="@dimen/_3sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toStartOf="@+id/vaccineImage"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_6sdp"
                    android:paddingEnd="@dimen/_6sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery_anything"
                        android:textAllCaps="true"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/text_Size10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/send_package_intercity_and_intracity"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/text_Size12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/send_sameday_packages"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_Size10" />

                    <TextView
                        android:id="@+id/delivery_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_height"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/green_button_bg"
                        android:elevation="0dp"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:text="@string/select_dropoff"
                        android:textAllCaps="false"
                        android:textColor="@color/both_side_white"
                        android:textSize="@dimen/btn_textSize" />

                </LinearLayout>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/vaccineImage"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:scaleType="centerCrop"
                    app:actualImageResource="@drawable/delivery_image"
                    app:actualImageScaleType="centerCrop"
                    app:placeholderImage="@drawable/image_preview"
                    app:placeholderImageScaleType="centerCrop"
                    app:roundedCornerRadius="@dimen/_5sdp" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>