<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_ripple"
        android:padding="@dimen/_10sdp">

        <RelativeLayout
            android:id="@+id/quantityLayout"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:background="@color/light_grey">

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:includeFontPadding="false"
                android:text="2"
                android:textColor="@color/text_color_black" />
        </RelativeLayout>

        <TextView
            android:id="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toStartOf="@+id/tvAmount"
            android:layout_toEndOf="@+id/quantityLayout"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="Chicken Quesadilla"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/nextBtn"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:includeFontPadding="false"
            android:text="$23.90"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/_10sdp" />


        <ImageView
            android:id="@+id/nextBtn"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:src="@drawable/ic_arrow_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/extraItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/quantityLayout"
            android:layout_below="@+id/quantityLayout"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_10sdp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/light_grey" />


</LinearLayout>